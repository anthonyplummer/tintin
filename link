}

#ALIAS {run troy}
{
    #variable ss 0;
    #variable target achilles;
    #variable turbo 1;
    portal $target
}

#ALIAS {ss %0}
{
    #if {$sshome == 1}
    {
        #if {$targetCount >= 2}
        {
            target $target;
            summon $targetCount.$target;
            #if {"$target" == "youngling" || "$target" == "grounds-guard"}
            {
                gt target = $target;
                #variable fighting 1;
                back $target;
                cast 'paralyze' $target;
                blast $target
            }
        };
        #elseif {$targetCount == 1 || $targetCount == 0}
        {
            target %0;
            gt target = $target;
            #variable fighting 1;
            summon $target;
            back $target;
            blast $target
        };
        #else
        {
            gt Targeting system is down.
        }
    };
    #else
    {
        gt We need to get to a designated s/s zone.
    }
}

