#ACTION {You receive your share of %0 experience.}
{
    #if {$targetCount < 1}
    {
        #variable targetCount 1
    };
    #variable fighting 0;
    #if {$turbo==1 && $ss==1}
    {
        #if {$targetCount > 1}
        {
            #math {targetCount} {$targetCount + 1};
            ss $targetCount.$target;
            gt Testing target = $target;
            target $target
        };
        #else
        {
            #math {targetCount} {$targetCount - 1};
            ss $target
        }
    };
    #if {$fish == 1 && $fishTank == 0 && $turbo == 1}
    {
        throw $dagger $target
    };
    #if {$fishTank == 1}
    {
        order soul get all.dagger;
        order soul throw $dagger $target
    };
    #elseif {$turbo == 1}
    {
        blast $target
    };
    #else
    {
        #variable tracking 0;
        #variable targetCount 1;
        say We're good here.
    }
}

