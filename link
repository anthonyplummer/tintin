#ACTION {%0 A pile of gold coins.[%1]}
{
    get all.coins
}

#ACTION {%0 starts following you.}
{
    group %0
}

#ACTION {%0 tells the group '=%1='}
{
    cast '%1' %0
}

#ACTION {%0 tells the group 'adren'}
{
    adren %0
}

#ACTION {A pile of gold coins.}
{
    take all.gold
}

#ACTION {Eddy tells you 'Wonderful! 25380 coins, and thank you very much!'}
{
    buy 9*black
}

#ACTION {H:%0 M:%1 V:%2 >}
{
    #variable hp %0;
    #variable mana %1;
    #variable move %2;
    #if {$hp<= 3000}
    {
        #delay {5} {gt I need a heal}
    }
}

#ACTION {Impossible! You can't concentrate enough!.}
{
    go
}

#ACTION {The white glow around %0 body fades.}
{
    #variable spiritual 0;
    cast 'spiritual armor'
}

#ACTION {You are rescued by Graphix, you are confused!}
{
    blast $target
}

#ACTION {You are surrounded by a strong force shield.}
{
    #variable shield 1;
    emote conjures a giant blue bubble around him.
}

#ACTION {You erect a metaphasic shield.}
{
    #variable meta 1;
    gt got that metaphysical thing going on;
    emote turns translucent and begins to shift space-time.
}

#ACTION {You erect a transparent anti-magic sphere about yourself.}
{
    #variable spellshield 0;
    shield
}

#ACTION {You experience a mental letdown as your blast fizzles.}
{
    blast $target
}

#ACTION {You failed to erect a spell barrier!}
{
    shield
}

#ACTION {You feel someone protecting you.}
{
    #variable armor 1;
    gt Got my vest on;
    emote straps a bullet-proof vest to his chest.
}

#ACTION {You feel the blessing of a diety upon you.}
{
    #variable bless 1;
    gt Bless'd up!;
    emote shines a bit more brilliantly than usual.
}

#ACTION {You feel the power of a diety's blessing shielding you.}
{
    #variable sanc 1;
    gt sanc'd up;
    emote hums powerfully.;
    go
}

#ACTION {You have been fully healed by Puff!}
{
    bs SO COOL!! Thanks Puff!
}

#ACTION {You have failed to open the portal to summon this individual.}
{
    go
}

#ACTION {You lost your concentration!}
{
    cast '$spell' $target
}

#ACTION {You receive your share of %0 experience.}
{
    #if {$turbo==1 && $ss==1}
    {
        summon $target;
        blast $target
    };
    #elseif {$turbo==1}
    {
        blast $target
    };
    #else
    {
        say We're good here.
    }
}

#ACTION {You send %0 flying into the wall!}
{
    blast $target
}

#ACTION {You send %0 flying out of the room!}
{
    summon $target;
    blast $target
}

#ACTION {You sense the red in your vision disappear.}
{
    aura
}

#ACTION {You succede in enhancing your vision.}
{
    #variable great 1;
    gt I can see everything!;
    emote eyes glows with a brilliant white hue.
}

#ACTION {You summon a flaming aura to deter attackers.}
{
    #variable fireshield 1;
    gt Flame on!;
    emote erupts in violent flames hotter than the sun.
}

#ACTION {Your anti-magic sphere flickers into a thousand specks of light, and vanishes.}
{
    #variable spellshield 0;
    shield
}

#ACTION {Your protective magic dissipates.}
{
    #variable sanc 0
}


#ALIAS {cast '%0' %1'}
{
    #variable spelltarget %1;
    #variable spell %0;
    cas '%0' %1
}

#ALIAS {go}
{
    #if {$adren == 0}
    {
        adren link
    };
    #else
    {
        #if {$shield == 0}
        {
            cast 'shield' link
        };
        #else
        {
            #if {$sanc == 0}
            {
                take black-potion;
                quaff black-potion
            };
            #else
            {
                #if {$ss == 1}
                {
                    summon $target
                };
                #elseif {$ss == 0 && $sanc == 1}
                {
                    blast $target
                };
                #else
                {
                    quaff black-potion
                }
            };
            blast $target
        }
    }
}

#ALIAS {kill %0}
{
    emote climbs through the %0's shadow and jabs a knife in their thorax;
    hit $target
}

#ALIAS {powerup}
{
    gt =armor=;
    gt =bless=;
    cast 'shield' link;
    flame;
    great;
    aura;
    shield;
    adren link;
    attack 6;
    attack 2;
    attack 4;
    attack 3
}

#ALIAS {psych %0}
{
    target %0;
    emote deadlocks $target;
    blast $target
}

#ALIAS {repairup}
{
    remove ring;
    remove ring;
    give ring super;
    wear ring;
    give ring super;
    wear ring;
    remove mane;
    remove mane;
    give mane super;
    wear mane;
    give mane super;
    wear mane;
    remove robe;
    give robe super;
    wear robe;
    remove hood;
    give hood super;
    wear hood;
    remove leggings;
    give leggings super;
    wear leggings;
    remove boots;
    give boots super;
    wear boots;
    remove gloves;
    give gloves super;
    wear gloves;
    remove bracers;
    give bracers super;
    wear bracers;
    remove buckler;
    give buckler super;
    wear buckler;
    remove suit;
    give suit super;
    wear suit;
    remove belt;
    give belt super;
    wear belt;
    remove bracelet;
    give bracelet super;
    wear bracelet;
    remove bracelet;
    give bracelet super;
    wear bracelet
}

#ALIAS {ss %0}
{
    #variable target %0;
    #variable ss 1;
    target %0;
    go
}

#ALIAS {target %0}
{
    #variable target %0;
    say about to dismantle %0, I'm just sayin
}

#ALIAS {turbossoff}
{
    #variable turbo 0;
    #variable ss 0;
    emote calms all the way down.
}

#ALIAS {turbosson}
{
    #variable turbo 1;
    #variable ss 1;
    emote gets a fiery looks in his eyes.
}


