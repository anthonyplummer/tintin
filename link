#ALIAS {blast %0}
{
    #variable target %0;
    #variable fighting 1;
    blas %0
}

#ALIAS {camelot-raid}
{
    10n2e14n2w7n2e2n2w
}

#ALIAS {cast '%0' %1'}
{
    #variable spelltarget %1;
    #variable spell %0;
    cas '%0' %1
}

#ALIAS {fish %0}
{
    gt FISH READY! Target = %0;
    #variable fish 1;
    #variable target %0
}

#ALIAS {go}
{
    #if {$adren == 0}
    {
        adren link
    };
    #elseif {$shield == 0}
    {
        cast 'shield' link
    };
    #elseif {$sanc == 0}
    {
        take black-potion;
        quaff black-potion
    };
    #elseif {$ss == 1}
    {
        #if {$targetNumber > 1}
        {
            ss $targetNumber.$target
        };
        #else
        {
            ss $target
        }
    };
    #elseif {$tracking == 1 && $turbo == 1}
    {
        track $target
    };
    #elseif {$fish == 1 && $sanc == 1}
    {
        #if {$fishTank == 1 && $turbo == 1}
        {
            order soul throw $dagger $target
        };
        #if {$fishTank == 0 && $turbo == 1}
        {
            throw $dagger $target
        };
        #else
        {
            #variable tracking 0;
            gt ALL OF THEM ARE DEAD!
        }
    };
    #elseif {$ss == 0 && $sanc == 1}
    {
        blast $target
    };
    #elseif {$fighting == 1}
    {
        gt In the miXXX...
    };
    #else
    {
        say nothing to do.
    }
}

