#ALIAS {repairup}
{
    remove ring;
    remove ring;
    give ring super;
    wear ring;
    give ring super;
    wear ring;
    remove mane;
    remove mane;
    give mane super;
    wear mane;
    give mane super;
    wear mane;
    remove robe;
    give robe super;
    wear robe;
    remove hood;
    give hood super;
    wear hood;
    remove leggings;
    give leggings super;
    wear leggings;
    remove boots;
    give boots super;
    wear boots;
    remove gloves;
    give gloves super;
    wear gloves;
    remove bracers;
    give bracers super;
    wear bracers;
    remove buckler;
    give buckler super;
    wear buckler;
    remove suit;
    give suit super;
    wear suit;
    remove belt;
    give belt super;
    wear belt;
    remove bracelet;
    give bracelet super;
    wear bracelet;
