#ACTION {%0 adrenalizes you!}
{
    #variable adren 1;
    say That's the stuff!
}

#ACTION {%0 deadlocks %1}
{
    #variable target %1;
    gt Roger That, Target = %1;
    #delay {2} {back $target;circle}
}

#ACTION {%0 is mortally wounded, and will die soon, if not aided.}
{
    back $target
}

#ACTION {%0 starts following you.}
{
    group %0
}

#ACTION {%0 suddenly freezes in place, unable to move!}
{
    back $target;
    circle;
    circle;
    circle
}

#ACTION {%0 tells the group 'FISH READY! Target = %1'}
{
    #variable target %1;
    Roger that! Target Confirmed! Standing by...
}

#ACTION {%0 tells the group 'target = %1'}
{
    #variable target %1
}

#ACTION {Graphix says 'target = %0'}
{
    #variable target %0
}

#ACTION {Graphix sends %0 sprawling with a powerful bash.}
{
    back $target
}

#ACTION {Link says 'about to dismantle %0, I'm just sayin'}
{
    #variable target %0
}

#ACTION {Link says 'target = %0'}
{
    #variable target %0
}

#ACTION {You arm is jolted and A black potion flies from your hand, *SMASH*}
{
    take black-potion;
    quaff black-potion
}

#ACTION {You receive your share of %0 experience.}
{
    hide
}

#ACTION {Your adrenalin level returns to normal.}
{
    #variable adren 0;
    gt my blood pressure is low..
}

#ACTION {Your protective magic dissipates.}
{
    #variable sanc 0;
    gt need sanc!;
    quaff black
}


